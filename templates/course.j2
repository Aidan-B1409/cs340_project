{% extends "public_template.j2" %}

{% block title %}Classes{%endblock%}

{% block main %}

<div class="container">

    <div class="starter-template">
        <h1>Schedule Of Classes</h1>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                {% for key in course_info[0].keys()%}
                    <th> {{key}} </th>
                {%endfor%}
            </tr>
        </thead>
        <tbody>
            {% for course in course_info%}
            <tr>
                {%for key in course.keys()%}
                    <td>{{course[key]}}</td>
                {%endfor%}
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>

{% endblock %}