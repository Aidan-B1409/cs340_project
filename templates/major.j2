{% extends "public_template.j2" %}

{% block title %}Major{%endblock%}

{% block main %}

<div class="container">

    <div class="starter-template">
        <h1>Majors</h1>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                {% for key in major_info[0].keys()%}
                    <th> {{key}} </th>
                {%endfor%}
            </tr>
        </thead>
        <tbody>
            {% for major in major_info%}
            <tr>
                {%for key in major.keys()%}
                    <td>{{major[key]}}</td>
                {%endfor%}
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>

{% endblock %}