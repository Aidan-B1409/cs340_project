{% extends "public_template.j2" %}

{% block title %}studentcourse Relationships{%endblock%}

{% block main %}

<div class="container">

    <div class="starter-template">
        <h1>Student - Course Relationships</h1>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                {% for key in student_courses[0].keys()%}
                    <th> {{key}} </th>
                {%endfor%}
                <th>Delete</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            {% for studentcourse in student_courses%}
            <tr>
                {%for key in studentcourse.keys()%}
                    <td>{{studentcourse[key]}}</td>
                {%endfor%}
                <td><a href="delete_studentcourse/{{studentcourse['id']}}" class="btn btn-default">Delete</a></td>
                <td><a href="update_studentcourse/{{studentcourse['id']}}" class="btn btn-default">Update</a></td>
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>


{% endblock %}