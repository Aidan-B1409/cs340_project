{% extends "public_template.j2" %}

{% block title %}Students{%endblock%}

{% block main %}

<div class="container">

    <div class="starter-template">
        <h1>Student Roster</h1>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                {% for key in student_info[0].keys()%}
                    <th> {{key}} </th>
                {%endfor%}
            </tr>
        </thead>
        <tbody>
            {% for student in student_info%}
            <tr>
                {%for key in student.keys()%}
                    <td>{{student[key]}}</td>
                {%endfor%}
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>

{% endblock %}